    trials: int,
    correct: int,
    incorrect: int,
    accuracy: float,
    recent-rate: float,
    last-100-rate: float,
    neuromod: float,
    learning-at-trial: int,
    learned-at-trial: int,
    mastered-at-trial: int,
}

